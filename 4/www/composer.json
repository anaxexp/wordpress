{
    "name": "wordpress/skeleton",
    "description": "Composer based WordPress project skeleton.",
    "type": "project",
    "keywords": ["WordPress", "Skeleton", "composer", "wpackagist"],
    "homepage": "https://github.com/anaxexp/WordPress.Skeleton",
    "license": "GPL-2.0+",
    "authors": [{
        "name": "Christopher Wells",
        "email": "cwells@anaxexp.io"
    }],
    "repositories": [{
        "type": "composer",
        "url": "https://wpackagist.org"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "secure-http": false
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.0",
        "vlucas/phpdotenv": "^2.0.1",
        "oscarotero/env": "^1.1.0",
        "johnpbloch/wordpress": "~4.9",
        "roots/wp-password-bcrypt": "1.0.0",
        "roots/wp-config": "1.0.0"
    },
    "require-dev": {
        "composer/installers": "~1.0",
        "squizlabs/php_codesniffer": "^3.0.2",
        "roave/security-advisories": "dev-master"
    },
    "extra": {
        "installer-paths": {
            "html/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "html/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "html/content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "preserve-paths": [
            "html/wp-config.php",
            "html/index.php",
            "html/content/uploads"
        ],
        "wordpress-install-dir": "html/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-package-install": "Installer::postPackageInstall",
        "post-package-update": "Installer::postPackageUpdate",
        "init-wp": "Installer::initWordPress",
        "post-create-project-cmd": "@php bin/initializer.php",
        "test": [
            "phpcs"
        ]
    },
    "autoload": {
        "psr-4": {
            "": "scripts/"
        }
    }
}